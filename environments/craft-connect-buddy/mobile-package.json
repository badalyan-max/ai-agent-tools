{
  "name": "craft-connect-buddy-mobile",
  "version": "1.0.0",
  "private": true,
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "test": "jest",
    "build:dev": "npx eas-cli build --profile development --platform all",
    "build:dev:ios": "npx eas-cli build --profile development --platform ios",
    "build:dev:android": "npx eas-cli build --profile development --platform android",
    "build:dev:local:android": "npx eas-cli build --profile development --platform android --local",
    "build:preview": "npx eas-cli build --profile preview --platform all",
    "build:preview:ios": "npx eas-cli build --profile preview --platform ios",
    "build:preview:android": "npx eas-cli build --profile preview --platform android",
    "build:prod": "npx eas-cli build --profile production --platform all",
    "build:prod:ios": "npx eas-cli build --profile production --platform ios",
    "build:prod:android": "npx eas-cli build --profile production --platform android",
    "submit:ios": "npx eas-cli submit --platform ios",
    "submit:android": "npx eas-cli submit --platform android",
    "submit:testflight": "npx eas-cli submit --platform ios --profile testflight --latest",
    "testflight": "npm run build:prod:ios && npm run submit:testflight",
    "testflight:guide": "node scripts/submit-testflight.js",
    "testflight:verify": "node scripts/submit-testflight.js --skip-checks",
    "submit:internal": "npx eas-cli submit --platform android --profile internal-testing --latest",
    "submit:appstore": "npx eas-cli submit --platform ios --profile app-store-review --latest",
    "playstore": "npm run build:prod:android && npm run submit:internal",
    "playstore:guide": "node scripts/submit-playstore.js",
    "playstore:verify": "node scripts/submit-playstore.js --skip-checks",
    "submit:playstore-review": "npx eas-cli submit --platform android --profile play-store-review --latest",
    "playstore-review": "npm run build:prod:android && npm run submit:playstore-review",
    "playstore-review:guide": "node scripts/submit-playstore-review.js",
    "playstore-review:verify": "node scripts/submit-playstore-review.js --skip-checks",
    "appstore": "npm run build:prod:ios && npm run submit:appstore",
    "appstore:guide": "node scripts/submit-appstore-review.js",
    "appstore:verify": "node scripts/submit-appstore-review.js --skip-checks",
    "eas:login": "npx eas-cli login",
    "eas:whoami": "npx eas-cli whoami",
    "prebuild": "expo prebuild",
    "prebuild:clean": "expo prebuild --clean",
    "prebuild:android": "expo prebuild --platform android --clean",
    "prebuild:ios": "expo prebuild --platform ios --clean",
    "build:verify": "npm run type-check && npx expo-doctor && npx expo config --type public",
    "build:verify:native": "npm run prebuild:android && echo 'Android native project generated successfully'",
    "build:verify:prod": "node scripts/verify-production-build.js",
    "generate-assets": "node scripts/generate-icons.js && node scripts/generate-screenshots.js",
    "generate-icons": "node scripts/generate-icons.js",
    "generate-screenshots": "node scripts/generate-screenshots.js",
    "monitor:reviews": "node scripts/monitor-reviews.js",
    "monitor:reviews:quick": "node scripts/monitor-reviews.js --quick",
    "status:ios": "npx eas-cli build:list --platform ios --limit 5",
    "status:android": "npx eas-cli build:list --platform android --limit 5",
    "status:all": "npx eas-cli build:list --limit 10"
  },
  "dependencies": {
    "@expo/metro-runtime": "~4.0.1",
    "@react-navigation/drawer": "^7.4.0",
    "@react-navigation/native": "^7.1.0",
    "@react-navigation/native-stack": "^7.3.0",
    "@supabase/supabase-js": "^2.88.0",
    "@tanstack/react-query": "^5.90.15",
    "base64-arraybuffer": "^1.0.2",
    "date-fns": "^4.1.0",
    "expo": "~52.0.0",
    "expo-asset": "~11.0.0",
    "expo-camera": "~16.0.0",
    "expo-constants": "~17.0.0",
    "expo-device": "~7.0.0",
    "expo-document-picker": "~13.0.3",
    "expo-image-picker": "~16.0.0",
    "expo-local-authentication": "~15.0.0",
    "expo-notifications": "~0.29.0",
    "expo-secure-store": "~14.0.0",
    "expo-splash-screen": "~0.29.0",
    "expo-status-bar": "~2.0.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-native": "0.76.9",
    "react-native-gesture-handler": "~2.20.2",
    "react-native-reanimated": "~3.16.0",
    "react-native-safe-area-context": "^4.12.0",
    "react-native-screens": "~4.4.0",
    "react-native-web": "~0.19.13"
  },
  "devDependencies": {
    "@babel/core": "^7.25.0",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "^29.5.14",
    "@types/react": "~18.3.12",
    "@types/sharp": "^0.31.1",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "eslint": "^9.32.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jest": "^29.7.0",
    "jest-expo": "~52.0.0",
    "react-test-renderer": "^18.3.1",
    "sharp": "^0.34.5",
    "typescript": "^5.8.3"
  },
  "jest": {
    "preset": "jest-expo",
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@sentry/react-native|native-base|react-native-svg|@supabase|base64-arraybuffer)"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testRegex": "src/__tests__/.*\\.test\\.tsx?$"
  }
}
